<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@color/material_dynamic_neutral_variant95"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_item_rv_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        tools:srcCompat="@drawable/producto" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_nombre_item_rv_producto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Aquí va el nombre"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txt_cantidad_item_rv_producto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Aquí va la cantidad"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txt_descripcion_item_rv_producto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Aquí va la descripción"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>